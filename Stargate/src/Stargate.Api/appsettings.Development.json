{
  "StargateDbOptions": {
    "ConnectionString": "Server=sql-server;Database=stargate;User Id=sa;Password=Password123!!;TrustServerCertificate=True;"
  },
  "AuthOptions": {
    "Authority": "https://localhost/auth"
  },
  "OpenTelemetry": {
    "ExcludedTracePaths": [ "/metrics", "/health", "/swagger", "/" ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.AspNetCore.Authentication": "Trace",
      "Microsoft.AspNetCore.Authorization": "Trace",
      "Microsoft.IdentityModel": "Trace"
    }
  },
  "Serilog": {
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": {
          "expression": "RequestPath is not null and (StartsWith(RequestPath, '/health') or StartsWith(RequestPath, '/swagger') or StartsWith(RequestPath, '/metrics') or RequestPath = '/')"
        }
      }
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.AspNetCore": "Error",
        "Microsoft.AspNetCore.Authentication": "Verbose",
        "Microsoft.AspNetCore.Authorization": "Verbose",
        "Microsoft.IdentityModel": "Verbose",
        "System": "Warning",
        "System.Net.Http.HttpClient.IdentityModel": "Verbose",
        "Microsoft.Hosting.Lifetime": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "Using": [
      "Serilog.Expressions",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq",
      "Serilog.Sinks.OpenTelemetry"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "Otel",
        "Args": {
          "serverUrl": "http://aspire-dashboard:18889",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ]
  }
}
